<style>
	@media print {
		table:last-of-type {
			page-break-after: auto;
		}
		html,
		body {
			height: 100%;
		}
		body {
			margin: 0;
			padding: 0;
			font-size: 14pt;
		}
	}

	@counter-style paren-lower-alpha {
		system: extends lower-alpha;
		prefix: "(";
		suffix: ") ";
	}
	body {
		font-family: Arial, sans-serif;
		margin: 1rem;
		padding: 0;
	}
	.header {
		display: grid;
		grid-template-rows: 1;
		grid-template-columns: 0.25fr 0.5fr 0.25fr;
		gap: 1rem;
		align-items: center;
		padding: 1rem;
	}
	.watermark {
		mso-visibility: none;
		position: fixed;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		opacity: 0.2;
		user-select: none;
		z-index: 9999;
	}

	.subject {
		margin: 1rem 0;
	}

	.options {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		grid-template-rows: repeat(2, 1fr);
		gap: 0.5rem;
		margin: 0.5rem 0;
	}
	.options li::marker,
	.questions li::marker {
		font-weight: bold;
	}
	.questions > li {
		margin: 0.5rem;
	}
	.options li {
		list-style: paren-lower-alpha;
		margin: 0.5rem;
	}
	.explanation img,
	.options li img,
	.question img {
		width: 60%;
		height: auto;
		max-height: 10rem;
		object-fit: contain;
		overflow: hidden;
	}

	.questions {
		min-height: 80vh;
	}

	/* .explanation,
	.options li,
	.question {
		border: 1px solid gray;
	} */

	/* Remove extra padding */
	p {
		margin: 0;
	}
</style>

<% if (layout ==='two-column') { %>
<style>
	.explanation img,
	.options li img,
	.question img {
		width: 100%;
		height: auto;
		object-fit: contain;
		overflow: hidden;
	}

	li.question {
		margin-bottom: 28px;
		margin-left: 1rem;
		margin-right: 1rem;
	}

	ol.questions {
		padding-left: 15px;
	}
	ul {
		position: relative;
		column-count: 2;
		column-gap: 2rem;
		column-fill: auto;
		max-width: 100%;
		margin: 20px auto;
		padding-left: 0;
	}
	ul::after {
		content: "";
		position: absolute;
		top: 0;
		bottom: 0;
		left: 49%;
		border-left: 1px solid #ccc;
	}
</style>
<% } %>
